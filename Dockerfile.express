FROM node:20-alpine

WORKDIR /app

# Install express
RUN npm install express

# Copy pre-built dist files
COPY dist/ ./dist/

# Copy server.js
COPY server.js ./

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8080', (res) => process.exit(res.statusCode === 200 ? 0 : 1))"

# Start server
CMD ["node", "server.js"]
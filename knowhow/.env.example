# ============================================
# Knowhow App - Local Development Environment
# ============================================
# Copy this file to .env and fill in Azure service keys.
# Database and Redis run locally via docker-compose.
# ============================================

# --- Server ---
NODE_ENV=development
PORT=3001

# --- Database (local Docker) ---
POSTGRES_DB=knowhow
POSTGRES_USER=knowhowuser
POSTGRES_PASSWORD=knowhowpass
POSTGRES_PORT=5432
DATABASE_URL=postgresql://knowhowuser:knowhowpass@localhost:5432/knowhow

# --- Redis (local Docker) ---
REDIS_URL=redis://localhost:6379

# --- JWT ---
JWT_SECRET=change-me-to-a-random-string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# --- Azure OpenAI ---
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# --- Azure Speech ---
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=japaneast

# --- Azure Cognitive Search ---
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-azure-search-key
AZURE_SEARCH_INDEX=knowledge-index

# --- CORS ---
CORS_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173
